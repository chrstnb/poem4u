{
	"schema": {
		"type": "array",
		"title": "poems",
		"format": "select",
		"items": {
			"title": "poem",
			"headerTemplate": "{{self.title}}",
			"type": "object",
			"properties": {
				"title": { "type": "string" },
				"author": {"type": "string"},
				"link": {"type": "string"},
				"tags": {
					"type":"array",
					"title": "tags",
					"format": "table",
					"items": {
						"type": "string",
						"properties": {
							"tag": {
								"type": "string"
							}
						}
					}
				}
			}
		}
	}
}

